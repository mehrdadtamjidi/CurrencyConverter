@model CurrencyConverter.Core.ViewModels.ConversionRate.LoadFormConversionRateViewModel

<form class="form-horizontal" id="frmAddConversionRate" role="form">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label asp-for="FromCurrencyId" class="control-label"></label>
                    <select asp-for="FromCurrencyId" class="form-control"  asp-items="@(new SelectList(Model.FromCurrency,"Value","Text"))">
                        <option value="">-- Choose --</option>
                    </select>
                    <span asp-validation-for="FromCurrencyId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label asp-for="ToCurrencyId" class="control-label"></label>
                    <select asp-for="ToCurrencyId" class="form-control" asp-items="@(new SelectList(Model.ToCurrency,"Value","Text"))">
                        <option value="">-- Choose --</option>
                    </select>
                    <span asp-validation-for="ToCurrencyId" class="text-danger"></span>
                </div>
            </div>
              <div class="form-group">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label asp-for="Rate" class="control-label"></label>
                    <input asp-for="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="pull-left">
                <button type="button" class="btn btn-primary" id="btnAddConversionRate"><i class="glyphicon glyphicon-ok"></i> Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-right:5px;"><i class="fa fa-close"></i>Close</button>
            </div>
        </div>
    </div>
</form>