@model List<CurrencyConverter.Core.ViewModels.Currency.CurrencyViewModel>
@{
    ViewData["Title"] = "Manage Currency";
    int rowNumber = 1;
}


@section Styles{

}

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <br /><br />
            <button class="btn btn-success" onclick=ShowModalSabt()>New Currency</button><br /><br />
            <div class="k-rtl">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@rowNumber</th>
                                <td>@item.Title</td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick=ShowModalEdit(@item.Id)>Edit</button>
                                    <button type="button" class="btn btn-danger" onclick=Delete(@item.Id)>Delete</button>
                                </td>
                            </tr>
                            rowNumber++;
                        }
                    }
                    else
                    {
                        <h1>Record is not exsit</h1>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modal {

    <div class="modal" id="CurrencyModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                     <div id="CurrencyModalbody"></div>
                </div>
            </div>
        </div>
    </div>



}

    @section Scripts {
    <script src="~/js/currency/main.js?@DateTime.Now.Ticks"></script>
}